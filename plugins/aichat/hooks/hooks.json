{
  "description": "Session management hooks for aichat resume workflow",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ">resume*|>continue*|>handoff*|>session*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/aichat_resume_hook.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
