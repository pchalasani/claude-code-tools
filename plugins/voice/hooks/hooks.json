{
  "description": "Voice hooks - remind agent to speak when stopping",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/stop_hook.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
