{
  "description": "Voice hooks - auto-generate voice summary when stopping",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/stop_hook.py",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
