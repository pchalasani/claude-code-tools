{
  "description": "Voice hooks - inject summary reminders and speak on stop",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/user_prompt_submit_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/post_tool_use_hook.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'test -f \"${CLAUDE_PLUGIN_ROOT}/hooks/stop_hook.py\" && python3 \"${CLAUDE_PLUGIN_ROOT}/hooks/stop_hook.py\" || echo \"{\\\"decision\\\":\\\"approve\\\"}\"'",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
